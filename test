#!/bin/bash
set -e

cd "$(dirname "$0")"

# Check if uv is installed
if ! command -v uv &> /dev/null; then
    echo "Error: uv is not installed. Please install uv first." >&2
    echo "Visit https://docs.astral.sh/uv/getting-started/installation/ for installation instructions." >&2
    exit 1
fi

# Check if --full flag is present
if [[ "$*" == *"--full"* ]]; then
    echo "Running full test suite including Playwright end-to-end tests..."

    # Install Playwright browsers if not already installed
    echo "Ensuring Playwright browsers are installed..."
    uv run playwright install chromium --with-deps

    # Remove --full from arguments to pass to pytest
    args=("$@")
    new_args=()
    for arg in "${args[@]}"; do
        if [[ "$arg" != "--full" ]]; then
            new_args+=("$arg")
        fi
    done

    # Run all tests including Playwright tests
    uv run pytest tests/ "${new_args[@]}"
    exit 0
fi

# Check if running integration tests specifically
if [[ "$*" == *"tests/integration"* ]] || [[ "$PWD" == *"/tests/integration" ]]; then
    echo "Running integration tests sequentially (no parallel execution)"
    # Force sequential execution for integration tests to avoid Docker conflicts
    uv run pytest tests/integration/ -v --tb=short --maxfail=1 "$@"
else
    # Normal test execution (can use parallel for unit tests)
    # Exclude Playwright tests by default (they require --full flag)
    uv run pytest tests/ --ignore=tests/test_webui_e2e.py "$@"
fi